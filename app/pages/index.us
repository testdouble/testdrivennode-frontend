<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title><%= pkg.name %></title>
    <link rel="stylesheet" type="text/css" href="/css/app.css" media="all" />
  </head>
  <body>
    <div class="row">
      <div class="large-12">

        <h1>Battleship</h1>

        <div class="row">
          <div class="large-8 columns">

            <h3>Opponent's Board</h3>

            <div class="row">
              <div class="columns small-10 small-centered">
                <table class="board">
                  <thead>
                    <th> </th>
                    <th>A</th>
                    <th>B</th>
                    <th>C</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td>1</td>
                      <td id="OA1">o</td>
                      <td id="OB1">o</td>
                      <td id="OC1">o</td>
                    </tr>
                    <tr>
                      <td>2</td>
                      <td id="OA2">o</td>
                      <td id="OB2">o</td>
                      <td id="OC2">o</td>
                    </tr>
                    <tr>
                      <td>3</td>
                      <td id="OA3">o</td>
                      <td id="OB3">o</td>
                      <td id="OC3">o</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <h3>Your Board</h3>

            <div class="row">
              <div class="columns small-10 small-centered">
                <table class="board">
                  <thead>
                    <th> </th>
                    <th>A</th>
                    <th>B</th>
                    <th>C</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td>1</td>
                      <td id="YA1">o</td>
                      <td id="YB1">o</td>
                      <td id="YC1">o</td>
                    </tr>
                    <tr>
                      <td>2</td>
                      <td id="YA2">o</td>
                      <td id="YB2">o</td>
                      <td id="YC2">o</td>
                    </tr>
                    <tr>
                      <td>3</td>
                      <td id="YA3">o</td>
                      <td id="YB3">o</td>
                      <td id="YC3">o</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <div class="large-4 columns">
            <div ng-controller="GameCtrl">

              <h3>Status</h3>

              <status><strong>{{ status }}</strong></status><br />

              <h3>Ships</h3>

              <div class="row">
                <div class="columns small-10 small-centered">
                  <table class="board">
                    <thead>
                      <th></th>
                      <th></th>
                      <th></th>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Patrol Boat</td>
                        <td class="ship">o</td>
                        <td class="ship">o</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
