<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title><%= pkg.name %></title>
    <link rel="stylesheet" type="text/css" href="/css/app.css" media="all" />
  </head>
  <body>
    <div class="row">
      <div class="large-12">
        <h1>Battleship</h1>
        <div class="row">
          <div class="large-8">
          </div>
          <div class="large-4">
            <input id="nickname-field" ng-model="nickname" placeholder="Nickname"/><br />
            <strong>You: </strong><nickname>{{ nickname }}</nickname><br />
            <strong>Opponent: </strong>
            <opponent>{{ opponent }}</opponent><br />
            <strong>Phase: </strong>
            <phase>{{ phase }}</phase><br />
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
